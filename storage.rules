rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User uploads (attachments sent by user)
    match /users/{userId}/uploads/{allPaths=**} {
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 20 * 1024 * 1024
                   // Allow images, PDFs, and any text/code based formats
                   && (request.resource.contentType.matches('image/.*') ||
                       request.resource.contentType == 'application/pdf' ||
                       request.resource.contentType.matches('text/.*') ||
                       request.resource.contentType.matches('application/.*'));
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // User attachments (new direct upload path)
    match /users/{userId}/attachments/{allPaths=**} {
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 200 * 1024 * 1024
                   && (request.resource.contentType.matches('image/.*') ||
                       request.resource.contentType.matches('video/.*') ||
                       request.resource.contentType.matches('audio/.*') ||
                       request.resource.contentType == 'application/pdf' ||
                       request.resource.contentType.matches('text/.*') ||
                       request.resource.contentType.matches('application/.*'));
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Chat generated images (from AI models)
    match /users/{userId}/chats/{chatId}/{allPaths=**} {
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 20 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
      allow read: if request.auth != null && request.auth.uid == userId;
    }
  }
}
